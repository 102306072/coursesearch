<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Teacher</th>
      <th>Place</th>
      <th>Time</th>
      <th>Credit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%=form_tag courses_path,method:"get" do%>
    Name<%=text_field_tag :name%>
    Teacher<%=text_field_tag :teacher%>
    Place<%=text_field_tag :place%>
    Time<%=text_field_tag :time%>
    Credit<%=text_field_tag :credit%>
    <%=submit_tag "search"%>
    <% end %>



    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.teacher %></td>
        <td><%= course.place %></td>
        <td><%= course.time %></td>
        <td><%= course.credit %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
